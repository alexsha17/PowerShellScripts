Skript 1 / sehr einfach


$Datum = Get-Date
Write-Host "Datum: $Datum"
$computerName = Get-ComputerInfo
Write-Host "Computername: $computerName"
$Prozesse = Get-Process
Write-Host "Anzahl der Prozesse: $($Prozesse.Count)"
$dateien = Get-ChildItem
Write-Host "Anzahl der Dateien im Verzeichnis: $($dateien.Count)"
